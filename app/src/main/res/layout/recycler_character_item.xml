<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#2AB670"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/character_photo"
        android:layout_width="190dp"
        android:layout_height="270dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/character_photo"
        android:foreground="@drawable/shape_image_borders"
        android:padding="5dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/character_without_photo" />

    <TextView
        android:id="@+id/character_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="center_horizontal"
        android:text="@string/undefined"
        android:textColor="@color/green_01"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/character_photo"
        app:layout_constraintStart_toStartOf="@+id/character_photo"
        app:layout_constraintTop_toBottomOf="@+id/character_photo" />

</androidx.constraintlayout.widget.ConstraintLayout>